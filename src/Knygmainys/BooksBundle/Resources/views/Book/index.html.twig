{% extends '::base.html.twig' %}

{% block content_title %}
    <div>Knygos</div>
{% endblock %}
{% block content_body %}
    <div class="row book-search-filter">
        <div class="col-lg-12">
            {{ form_start(form) }}
            <div class="row book-search-row">
                <div class="col-lg-12">
                    {{ form_errors(form.search_text) }}
                    {{ form_widget(form.search_text, {'attr': {'class': 'form-control', 'placeholder': 'Paie≈°ka'}}) }}
                </div>
            </div>
            {% if form.category is defined %}
                <div class="row">
                    <div class="col-lg-12">
                        {{ form_errors(form.category) }}
                        {{ form_widget(form.category) }}
                    </div>
                </div>
            {% endif %}
            <br>
            <div class="row">
                <div class="col-lg-12">
                    {{ form_errors(form.type) }}
                    {{ form_widget(form.type) }}
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 col-sm-12">
                    <div class="row">
                        <div class="col-sm-1">
                            <div class="form-group">
                                {{ form_widget(form.search, {'attr': {'class':'btn btn-sm btn-default no-border-radius btn-match'}}) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
    <div class="row books-view">
        {% for book in books %}
            <div class="col-lg-4">
                <ul class="book-item">
                    {% for release in book.bookRelease|slice(0,1) %}
                        <li><img class="book-image" src="{{ asset(release.release.getWebPath) }}"/></li>
                    {% endfor %}
                    <li class="book-item-title"><a href="{{ path('knygmainys_books_show', {'id': book.id}) }}">{{ book.title }}</a></li>
                    <li class="book-item-authors">
                        {% for author in book.author %}
                            {{ author.author.firstName }} {{ author.author.lastName }}
                        {% endfor %}
                    </li>
                    <li class="book-item-category"><b>{{ book.category.name }}</b></li>
                </ul>
            </div>
        {% endfor %}
        <div class="row">
            <div class="col-sm-12">
                <div class="navigation center-block">
                    {{ knp_pagination_render(books) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
