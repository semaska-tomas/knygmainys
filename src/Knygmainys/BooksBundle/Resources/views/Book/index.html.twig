{% extends '::base.html.twig' %}

{% block content_title %}
    <div>Knygos</div>
{% endblock %}
{% block content_body %}
    <div class="row book-search-filter">
        <div class="col-lg-12">
            {{ form_start(form) }}
            <div class="row book-search-row">
                <div class="col-lg-12">
                    {{ form_errors(form.search_text) }}
                    {{ form_widget(form.search_text, {'attr': {'class': 'form-control', 'placeholder': 'Paieška'}}) }}
                </div>
            </div>
            {% if form.category is defined %}
                <div class="row">
                    <div class="col-lg-12">
                        {{ form_errors(form.category) }}
                        {{ form_widget(form.category) }}
                    </div>
                </div>
            {% endif %}
            <br>
            <div class="row">
                <div class="col-lg-12">
                    {{ form_errors(form.type) }}
                    {{ form_widget(form.type) }}
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 col-sm-12">
                    <div class="row">
                        <div class="col-sm-1">
                            <div class="form-group">
                                {{ form_widget(form.search, {'attr': {'class':'btn btn-sm btn-default no-border-radius'}}) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>

    {% set item = 3 %}
    {% if books is empty %}
        <p>Knygų pagal Jūsų užklausa nerasta.</p>
    {% endif %}
    {% for book in books %}
        {% if item is divisible by(3) %}
            <div class="row books-view">
        {% endif %}
        {% set item = item + 1 %}
        <div class="col-lg-4">
            <ul class="book-item">
                {% for release in book.bookRelease|slice(0,1) %}
                    <li><a href="{{ path('knygmainys_books_show', {'id': book.id}) }}"><img class="book-image" src="{{ asset(release.release.getWebPath) }}"/></a></li>
                {% endfor %}
                <li class="book-item-title"><a href="{{ path('knygmainys_books_show', {'id': book.id}) }}">{{ book.title }}</a></li>
                <li class="book-item-authors">
                    {% for author in book.author %}
                        {{ author.author.firstName }} {{ author.author.lastName }}
                    {% endfor %}
                </li>
                <li class="book-item-category"><b>{{ book.category.name }}</b></li>
            </ul>
        </div>
        {% if item is divisible by(3) %}
            </div>
        {% endif %}
    {% endfor %}
    <div class="row">
        <div class="col-sm-12">
            <div class="navigation center-block">
                {{ knp_pagination_render(books) }}
            </div>
        </div>
    </div>
{% endblock %}
